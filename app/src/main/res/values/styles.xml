<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="ExpressionText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ActionButton" parent="Button">
        <item name="android:background">@drawable/action_button_style</item>
    </style>

    <style name="ActionButtonLand" parent="ActionButton">
        <item name="android:textSize">30sp</item>
        <item name="android:onClick">"onClick"</item>
    </style>

    <style name="NumberButton" parent="Button">
        <item name="android:background">@drawable/number_button_style</item>
        <item name="android:onClick">"onClick"</item>
    </style>

    <style name="NumberButtonLand" parent="NumberButton">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="EqualsButton" parent="Button">
        <item name="android:background">@drawable/equals_button_style</item>
    </style>

    <style name="EqualsButtonLand" parent="EqualsButton">
        <item name="android:textSize">60sp</item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">55sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="TextStyleLand" parent="TextStyle">
        <item name="android:textSize">30sp</item>
    </style>
</resources>